generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")

}

model User {
  id           String  @id @default(cuid())
  username     String  @unique // This will be the token used to sign up
  name         String?
  credentialID String  @unique // The fingerprint ID
  publicKey    String  // The fingerprint public key
  counter      BigInt  // Security counter for passkeys
  transports   String? // How the key connects (usb, nfc, internal)
  failedAttempts   Int      @default(0)
  lockoutUntil     DateTime?
}

model InviteToken {
  id        String  @id @default(cuid())
  token     String  @unique
  isUsed    Boolean @default(false)
  createdAt DateTime @default(now())
  recipient String?  // <--- Add this to store the name temporarily
  expiresAt DateTime
}

model ActivityLog {
  id        String   @id @default(cuid())
  action    String   // e.g., "TOKEN_GENERATED", "USER_REGISTERED"
  details   String   // e.g., "Token issued for Agent Smith"
  userName  String?  // Name of the person involved
  createdAt DateTime @default(now())
}